{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "paths": {
            "@thuva4/snippets-core": [
                "./core/src/index.ts"
            ],
            "@thuva4/snippets-node": [
                "./node/src/index.ts"
            ],
            "@thuva4/snippets-browser": [
                "./browser/src/index.ts"
            ]
        }
    }
}