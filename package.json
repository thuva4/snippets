{
  "name": "snippets-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run --exclude test/integration/**",
    "test:integration": "tsx test/integration/index.test.ts",
    "clean": "rm -rf dist test-output packages/*/dist",
    "release": "npx changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@rollup/rollup-linux-x64-gnu": "^4.53.3",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
